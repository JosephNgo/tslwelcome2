<html>

<head>
	<title>AM Students</title>
	<link href="css/bootstrap.min.css" rel="stylesheet">
	<link href="custom.css" rel="stylesheet">
</head>

<body>
<div class="row-fluid">
	<div class="header">
		<h1>Starter League: AM Web Dev </h1>
	</div>
</div>

<div class="row-fluid">
	<div class="span4">

	</div>

	<div class="span8">
		<ul >
			<% @am_api.each do |student| %>
				<li>
					<img class='thumbnail' src='http://codemountain.com<%= student["student"]["avatar_url"] %>'> 
					<p class='name'><%= student["student"]["name"] %></p>
				</li>
			<% end %>
		</ul>
	</div>
</div>


</body>
</html>